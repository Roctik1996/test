<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_title_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_profile"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tomlonghurst.roundimageview.RoundImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:riv_border_color="#000000"
                app:riv_border_width="0dp">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorInactive"
                    android:scaleType="center"
                    android:src="@drawable/ic_photo_camera"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_ava"
                    />
            </com.tomlonghurst.roundimageview.RoundImageView>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/name"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="@id/txt_name"
                app:layout_constraintBottom_toBottomOf="@id/txt_name"
                app:layout_constraintStart_toEndOf="@id/txt_name"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/email"
                app:layout_constraintTop_toBottomOf="@id/txt_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"/>

            <EditText
                android:id="@+id/edt_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toTopOf="@id/txt_mail"
                app:layout_constraintBottom_toBottomOf="@id/txt_mail"
                app:layout_constraintStart_toEndOf="@id/txt_mail"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/txt_mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txt_prof_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/professional_information"
                app:layout_constraintTop_toBottomOf="@id/line1"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_prof"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/profession"
                app:layout_constraintTop_toBottomOf="@id/txt_prof_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"/>

            <Spinner
                android:id="@+id/spinner_prof"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:entries="@array/prof"
                app:layout_constraintTop_toTopOf="@id/txt_prof"
                app:layout_constraintBottom_toBottomOf="@id/txt_prof"
                app:layout_constraintStart_toEndOf="@id/txt_prof"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txt_industry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/industry"
                app:layout_constraintTop_toBottomOf="@id/txt_prof"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"/>

            <Spinner
                android:id="@+id/spinner_industry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:entries="@array/prof"
                app:layout_constraintTop_toTopOf="@id/txt_industry"
                app:layout_constraintBottom_toBottomOf="@id/txt_industry"
                app:layout_constraintStart_toEndOf="@id/txt_industry"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txt_skills"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/skills"
                app:layout_constraintTop_toTopOf="@id/edt_skills"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"
                app:layout_constraintBottom_toBottomOf="@id/edt_skills"/>

            <EditText
                android:id="@+id/edt_skills"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="textMultiLine"
                app:layout_constraintTop_toBottomOf="@id/spinner_industry"
                app:layout_constraintStart_toEndOf="@id/txt_mail"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_prof_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/profession_details"
                app:layout_constraintTop_toTopOf="@id/edt_prof_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"
                app:layout_constraintBottom_toBottomOf="@id/edt_prof_detail"/>

            <EditText
                android:id="@+id/edt_prof_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="textMultiLine"
                app:layout_constraintTop_toBottomOf="@id/edt_skills"
                app:layout_constraintStart_toEndOf="@id/txt_mail"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/phone"
                app:layout_constraintTop_toTopOf="@id/edt_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"
                app:layout_constraintBottom_toBottomOf="@id/edt_phone"/>

            <net.rimoto.intlphoneinput.IntlPhoneInput
                android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:textSize="14sp"
                android:maxLength="10"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/edt_prof_detail"
                app:layout_constraintStart_toEndOf="@id/txt_mail"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_pref_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:text="@string/preffered_contact_method"
                app:layout_constraintTop_toBottomOf="@id/edt_phone"
                app:layout_constraintStart_toStartOf="@id/edt_phone"
                app:layout_constraintEnd_toEndOf="@id/edt_phone"/>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txt_pref_method"
                app:layout_constraintStart_toStartOf="@id/txt_pref_method"
                app:layout_constraintEnd_toEndOf="@id/txt_pref_method">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"/>
            </RadioGroup>

            <TextView
                android:id="@+id/txt_insta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/instagram"
                app:layout_constraintTop_toBottomOf="@id/radio_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"/>

            <EditText
                android:id="@+id/edt_insta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="@id/txt_insta"
                app:layout_constraintBottom_toBottomOf="@id/txt_insta"
                app:layout_constraintStart_toEndOf="@id/txt_insta"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_fb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/facebook"
                app:layout_constraintTop_toBottomOf="@id/txt_insta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"/>

            <EditText
                android:id="@+id/edt_fb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="@id/txt_fb"
                app:layout_constraintBottom_toBottomOf="@id/txt_fb"
                app:layout_constraintStart_toEndOf="@id/txt_fb"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_web"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/website"
                app:layout_constraintTop_toBottomOf="@id/txt_fb"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"/>

            <EditText
                android:id="@+id/edt_web"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="@id/txt_web"
                app:layout_constraintBottom_toBottomOf="@id/txt_web"
                app:layout_constraintStart_toEndOf="@id/txt_web"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/company"
                app:layout_constraintTop_toBottomOf="@id/txt_web"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"/>

            <EditText
                android:id="@+id/edt_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="@id/txt_company"
                app:layout_constraintBottom_toBottomOf="@id/txt_company"
                app:layout_constraintStart_toEndOf="@id/txt_company"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:text="@string/address"
                app:layout_constraintTop_toTopOf="@id/edt_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_name"
                app:layout_constraintBottom_toBottomOf="@id/edt_address"/>

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:inputType="textMultiLine"
                app:layout_constraintTop_toBottomOf="@id/edt_company"
                app:layout_constraintStart_toEndOf="@id/txt_mail"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>